<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#95000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bungee_regular"
            android:gravity="center"
            android:text="tell us your feedback"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="19sp"
            />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/settings_icon"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/txtHelperNameWhenCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee_regular"
            android:gravity="center"
            android:text="Emad ali"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="19sp"
            />

        <TextView
            android:id="@+id/txtHelperExpTypeWhenCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee_regular"
            android:gravity="center"
            android:text="Emad ali"
            android:textAllCaps="true"
            android:textColor="@color/yellow"
            android:textSize="19sp"
            />

        <RatingBar
            android:id="@+id/ratingBarWhenCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/btnDoneOnUserHomeWhenCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="#99E0E414"
            android:fontFamily="@font/bungee_regular"
            android:gravity="center"
            android:text="Done"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:textSize="19sp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>